{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "Node",

    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "types": ["node", "vitest/globals"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "tests"]
}
